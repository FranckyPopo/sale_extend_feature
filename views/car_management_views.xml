<odoo>

    <record id="inherited_model_view_form_franck" model="ir.ui.view">
        <field name="name">Car Tree</field>
        <field name="model">car_management.car</field>
        <field name="inherit_id" ref="car_management.car_action_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='car_model']" position="before">
              <field name="test_field"/>
            </xpath>
        </field>
    </record>

    <record id="inherited_model_view_form_franck2" model="ir.ui.view">
        <field name="name">TEst extend</field>
        <field name="model">car_management.car</field>
        <field name="inherit_id" ref="car_management.car_action_view_form"/>
        <field name="arch" type="xml">
            <!-- find field description and add the field
                 new_field after it -->
            <xpath expr="//field[@name='employe_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>